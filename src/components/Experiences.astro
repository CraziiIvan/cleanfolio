---
type exp = {
  role: string;
  company: string;
  year: string | number;
};

const exps: exp[] = [
  { role: "Freelance Developer", company: "SelfEmploy", year: "Present" },
  { role: "Frontend Engineer", company: "TechX", year: 2023 },
];
---

<section class="mt-28">
  <h2 class="font-medium text-zinc-600">Experiences</h2>
  <div class="mt-4 flex flex-col divide-y divide-zinc-200">
    {
      exps.map((exp) => (
        <div class="py-2 transition-all duration-500 overflow-hidden">
          <div class=" flex justify-between space-x-2">
            <div class="text-black font-medium">
              {exp.role}
              <span class="text-zinc-600 font-normal">@</span>
              {exp.company}
            </div>
            <div class=" text-zinc-400">{exp.year}</div>
          </div>
        </div>
      ))
    }
  </div>
</section>
