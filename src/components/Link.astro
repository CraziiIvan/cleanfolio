---
import { Icon } from "astro-icon/components";

type Props = {
  href: string;
  class?: string;
  icon?: boolean;
};

const { href, class: className, icon = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    "underline text-sage-12 dark:text-sageDark-12 inline-flex items-center font-medium underline-offset-4 gap-x-1 decoration decoration-[1.5px] decoration-sage-4 hover:decoration-gray8 dark:decoration-sageDark-4 dark:hover:decoration-sageDark-8 text-wrap duration-75 ease-out",
    className,
  ]}
>
  <slot />
  {
    icon && (
      <Icon
        name="move-up-right"
        size={12}
        class="text-sage-8 dark:text-sageDark-8"
      />
    )
  }
</a>
