---
type Props = {
  href: string;
  class?: string;
};

const { href, class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "underline text-gray12 inline-flex items-center font-medium underline-offset-[1.5px] decoration decoration-[1.5px] decoration-gray6 hover:decoration-gray9 text-wrap duration-150 ease-out ",
    className,
  ]}
>
  <slot />
</a>
