---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

import { getEntry } from 'astro:content';

const colophonPost = await getEntry('stuffs', "colophon");

const { Content } = await colophonPost.render();
---

<Layout title="Colophon" description="Colophon">
    <a
    class="flex items-center gap-x-0.5 z-50 absolute duration-150 ease-out top-8 text-gray9 hover:text-gray12"
    href="/"
  >
    <Icon name="undo-2" size={14} />
    Back
  </a>
  <header>
    <h1 class="text-xl font-medium">{colophonPost.data.title}</h1>
    <p class="text-gray11 mt-2"
      >
      {colophonPost.data.description}
      </p
    >
  </header>
  <main class="mt-12 text-gray11 markdown-content">
    <Content />
  </main>
</Layout>